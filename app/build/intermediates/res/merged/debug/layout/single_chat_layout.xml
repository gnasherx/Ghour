<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/single_chat_profile_image"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/profile_image" />

    <TextView
        android:id="@+id/single_chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@+id/single_chat_profile_image"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/single_chat_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chat description will go here"
        android:layout_below="@+id/single_chat_name"
        android:layout_toEndOf="@+id/single_chat_profile_image"
        android:textSize="16sp"
        android:textStyle="normal" />

</RelativeLayout>



