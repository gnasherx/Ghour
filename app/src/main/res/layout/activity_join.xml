<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:fillViewport="true"
    android:scrollbars="vertical"
    tools:context="com.example.ganesh.ghour.authentication.join.JoinActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:padding="16dp">

        <TextView
            android:id="@+id/enter_your_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your email"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/join_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enter_your_email"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent"
            android:hint="you@gmail.com"
            android:maxLines="1"
            android:textCursorDrawable="@drawable/cursor"
            android:inputType="textEmailAddress"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_blue"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/enter_your_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/join_user_email"
            android:layout_marginTop="16dp"
            android:text="Enter your password"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/join_user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enter_your_password"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textCursorDrawable="@drawable/cursor"
            android:background="@android:color/transparent"
            android:hint="******"
            android:inputType="textPassword"
            android:textColorHint="@color/hint_blue"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/join_select_your_work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_below="@+id/join_user_password"
            android:labelFor="@+id/join_user_password">
        </Spinner>


        <Button
            android:id="@+id/join_user_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/join_select_your_work"
            android:layout_marginTop="16dp"
            android:background="@drawable/signup_button"
            android:text="join"
            android:textColor="@color/blue" />


    </RelativeLayout>


</ScrollView>
